<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <android.widget.Button
            android:id="@+id/tempbtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="체온"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:autoSizeMaxTextSize="@dimen/cardview_compat_inset_shadow"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:background="@drawable/layout_bgc"
            android:layout_weight="1"
            >

        </android.widget.Button>



        <android.widget.Button
            android:id="@+id/ppgbtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="PPG"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:autoSizeMaxTextSize="@dimen/cardview_compat_inset_shadow"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:background="@drawable/layout_bgc2"
            android:layout_weight="1"
            />


        <android.widget.Button
            android:id="@+id/ecgbtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="ECG"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:autoSizeMaxTextSize="@dimen/cardview_compat_inset_shadow"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:background="@drawable/layout_bgc3"
            android:layout_weight="1"
            />



        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:id="@+id/menu_fragment"
            />
</LinearLayout>
</LinearLayout>