<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ppg_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:tag="ppgfragment">

    <LinearLayout
        android:id="@+id/show_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <android.widget.Button
                    android:id="@+id/start"
                    android:layout_width="400px"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/transparent_bg_bordered_button"
                    android:text="측정하기"
                    android:textSelectHandle="@anim/fragment_fade_exit"
                    android:textSize="25dp" />

            </LinearLayout>

            <android.widget.Button
                android:id="@+id/pause"
                android:layout_width="500px"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/transparent_bg_bordered_button"
                android:text="일시정지"
                android:textSelectHandle="@anim/fragment_fade_exit"
                android:textSize="25dp"
                android:visibility="gone" />
            <android.widget.Button
                android:id="@+id/send_by_socket"
                android:layout_width="400px"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/transparent_bg_bordered_button"
                android:text="서버로 데이터 전송"
                android:textSelectHandle="@anim/fragment_fade_exit"
                android:textSize="15dp"
                android:visibility="visible"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@drawable/shadow"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ppg_hr_value_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="BPM"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/ppg_hr_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text=""
                    android:textSize="18dp"
                    android:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@drawable/shadow"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ppg_hr_confidence_value_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Confidence"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/ppg_hr_confidence_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text=""
                    android:textSize="18dp"
                    android:visibility="visible" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/shadow"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ppg_sensor_activity_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Activity"
                android:textSize="18dp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/ppg_sensor_activity_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="rest"
                android:textColorHighlight="@color/black"
                android:textSize="25dp"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/shadow"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/serverDataColor"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="#FF0000"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/servercalcdata"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="data"
                    android:textSize="20dp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/loading_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="100dp"
            android:maxHeight="100dp"
            android:minWidth="100dp"
            android:minHeight="100dp" />

    </LinearLayout>

</LinearLayout>




